{
  "name": "automotive-app-deployment",
  "displayName": "Automotive App Deployment",
  "description": "Deploy a given docker image from a GitHub package registry to a remote microcontroller",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "leda-app-auto-deployer-devices",
        "contents": "No device has been added yet.\n By clicking the '+' button or the button below you can add new devices.\n[Add Device](command:automotive-app-deployment.addDevice)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "leda-app-auto-deployer",
          "title": "Leda App Deployer",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "leda-app-auto-deployer": [
        {
          "id": "leda-app-auto-deployer-devices",
          "name": "Devices",
          "type": "tree"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "automotive-app-deployment.addDevice",
          "group": "navigation"
        }
      ],

      "view/item/context": [
        {
          "command": "automotive-app-deployment.deleteDevice",
          "when": "viewItem == parent",
          "group": "inline@3"
        },
        {
            "command": "automotive-app-deployment.editDevice",
            "when": "viewItem == parent",
            "group": "inline@2"
        },
        {
          "command": "automotive-app-deployment.deployApplication",
          "when": "viewItem == parent",
          "group": "inline@1"
      }
    ]
    },

    "configuration": {
      "title": "Leda App Deployer",
      "properties": {
        "leda-app-deployer.devices": {
          "type": "array",
          "items": {
            "type": "object", 
            "title": "Device object",
            "required": [
              "name",
              "ip", 
              "sshPort",
              "sshUsername"
            ],
            "properties": {
              "name": {
                "type": "string",
                "description": "Device name"
              },
              "ip": {
                "type": "string",
                "description": "Device IP"
              },
              "sshPort": {
                "type": "number",
                "description": "Device SSH port"
              },
              "sshUsername": {
                "type": "string",
                "description": "Device user login name"
              },
              "sshPassword": {
                "type": "string",
                "description": "Device user login password"
              },
              "sshPublicKeyPath": {
                "type": "string",
                "description": "path to public key"
              },
              "sshPrivateKeyPath": {
                "type": "string",
                "description": "path to private key"
              }
            }
          },
          "default": [],
          "scope": "window",
          "description": "Specifies the devices where applications can be deployed on."
        }
      }
    },

    "commands": [
      {
        "command": "automotive-app-deployment.addDevice",
        "title": "LAD: Add Device",
        "icon": "$(plus)"
      },
      {
        "command": "automotive-app-deployment.deleteDevice",
        "title": "LAD: Delete Device",
        "icon": "$(trash)"
      },
      {
        "command": "automotive-app-deployment.editDevice",
        "title": "LAD: Edit Device",
        "icon": "$(edit)"
      },
      {
        "command": "automotive-app-deployment.deployApplication",
        "title": "LAD: Deploy Apllication",
        "icon": "$(play)"
      },
      {
        "command": "automotive-app-deployment.openConfig",
        "title": "LAD: Open Config File"
      },
      {
        "command": "automotive-app-deployment.deployManifestToLeda",
        "title": "LAD: Deploy to Leda"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-jest": "npx jest"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/ssh2": "^1.11.11",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.36.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/ssh2-streams": "^0.1.9",
    "fs": "^0.0.1-security",
    "jsonc-parser": "^3.2.0",
    "node-ssh": "^13.1.0",
    "path": "^0.12.7"
  }
}
